---
import BaseLayout from '../../../layouts/BaseLayout.astro'
const allPosts = await Astro.glob('../../blog/*.md')
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]
---

<BaseLayout title="Tags">
	<div>
		{
			tags.map((tag) => (
				<p>
					<a href={`/blog/tags/${tag}`}>{tag}</a>
				</p>
			))
		}
	</div>
</BaseLayout>
