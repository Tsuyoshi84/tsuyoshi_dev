---
type Props = {
	title: string
}

const { title } = Astro.props
---

<h1>{title}</h1>

<style>
	h1 {
		margin-block-end: var(--size-4);
		font-weight: var(--font-weight-9);
		letter-spacing: var(--size-2);
		color: var(--color-primary);

		@media (768px <= width) {
			margin-block-end: var(--size-6);
			font-size: var(--font-size-fluid-3);
		}
	}
</style>
