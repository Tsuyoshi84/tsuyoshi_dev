{
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"cSpell.ignorePaths": ["package.json", "pnpm-lock.yaml", ".vscode/**", ".devcontainer/**"],
	"cSpell.words": ["astro", "datetime", "stylelint", "yoshi"],

	"css.validate": false,

	"cssvar.files": ["./node_modules/open-props/open-props.min.css", "./src/styles/global.css"],
	"cssvar.ignore": [],
	"cssvar.extensions": ["css", "jsx", "tsx", "astro"],

	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.quickSuggestions": { "strings": "on" },

	"eslint.validate": ["javascript", "javascriptreact", "astro", "typescript", "typescriptreact"],

	"less.validate": false,
	"scss.validate": false,
	"stylelint.validate": ["css", "vue", "svelte", "astro"],
	"files.autoSave": "afterDelay"
}
